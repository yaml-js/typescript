{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "lib",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "module": "ESNext",

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", ],
  "exclude": ["lib", "test", "**/node-modules"]
}
